<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.blog.mapper.SysBlogOptionsMapper">
    
    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="org.tiankafei.blog.vo.SysBlogOptionsQueryVo">
		<id column="id" property="id"/>
		<result column="options_name" property="optionsName"/>
		<result column="options_value" property="optionsValue"/>
		<result column="remark" property="remark"/>
		<result column="description" property="description"/>
		<result column="create_time" property="createTime"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="update_time" property="updateTime"/>
		<result column="update_user_id" property="updateUserId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, options_name, options_value, remark, description, create_time, create_user_id, update_time, update_user_id
    </sql>

    <!-- 根据主键获取 系统的博客选项设置 对象 -->
    <select id="getSysBlogOptionsById" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_blog_options where id = #{id}
    </select>

    <!-- 分页查询 系统的博客选项设置 对象集合 -->
    <select id="getSysBlogOptionsPageList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_blog_options
    </select>

    <!-- 查询 系统的博客选项设置 对象集合 -->
    <select id="getSysBlogOptionsList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_blog_options
    </select>

</mapper>
