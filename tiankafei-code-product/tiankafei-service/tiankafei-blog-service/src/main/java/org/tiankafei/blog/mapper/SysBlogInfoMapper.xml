<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.blog.mapper.SysBlogInfoMapper">

            <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, content, type, label, is_top, custom_name, access_permission, password, is_discuss, is_subscription, release_status, create_time, release_time, update_time, create_user_id
    </sql>

    <select id="getSysBlogInfoList" resultType="org.tiankafei.blog.vo.SysBlogInfoQueryVo">
        select
        <include refid="Base_Column_List"/>
        from sys_blog_info
    </select>

</mapper>
