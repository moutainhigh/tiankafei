<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.blog.mapper.SysBlogDiaryMapper">
    
    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="org.tiankafei.blog.vo.SysBlogDiaryQueryVo">
		<id column="id" property="id"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="custom_name" property="customName"/>
		<result column="password" property="password"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="update_user_id" property="updateUserId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, title, content, custom_name, password, create_time, update_time, create_user_id, update_user_id
    </sql>

    <!-- 根据主键获取 系统的博客日记 对象 -->
    <select id="getSysBlogDiaryById" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_blog_diary where id = #{id}
    </select>

    <!-- 分页查询 系统的博客日记 对象集合 -->
    <select id="getSysBlogDiaryPageList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_blog_diary
    </select>

    <!-- 查询 系统的博客日记 对象集合 -->
    <select id="getSysBlogDiaryList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_blog_diary
    </select>

</mapper>
