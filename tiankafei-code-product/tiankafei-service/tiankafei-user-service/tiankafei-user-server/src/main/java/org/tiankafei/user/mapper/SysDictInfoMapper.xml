<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.user.mapper.SysDictInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="org.tiankafei.user.vo.SysDictInfoQueryVo">
        <id column="id" property="id"/>
        <result column="dict_code" property="dictCode"/>
        <result column="dict_name" property="dictName"/>
        <result column="status" property="status"/>
        <result column="description" property="description"/>
        <result column="remarks" property="remarks"/>
        <result column="data_table" property="dataTable"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="update_user_id" property="updateUserId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, dict_code, dict_name, status, description, remarks, data_table, create_time, update_time, create_user_id, update_user_id
    </sql>

    <!-- 根据主键获取 系统数据字典表 对象 -->
    <select id="getSysDictInfoById" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_dict_info where id = #{id}
    </select>

    <!-- 分页查询 系统数据字典表 对象集合 -->
    <select id="getSysDictInfoPageList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_dict_info
    </select>

    <!-- 查询 系统数据字典表 对象集合 -->
    <select id="getSysDictInfoList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_dict_info
    </select>

</mapper>
