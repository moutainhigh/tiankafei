<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.user.mapper.LinksInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="org.tiankafei.user.vo.LinksInfoVo">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="links" property="links"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="update_user_id" property="updateUserId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, name, links, status, create_time, update_time, create_user_id, update_user_id
    </sql>

    <!-- 根据主键获取 系统的友情链接 对象 -->
    <select id="getSysLinksById" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_links where id = #{id}
    </select>

    <!-- 分页查询 系统的友情链接 对象集合 -->
    <select id="getSysLinksPageList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_links
    </select>

    <!-- 查询 系统的友情链接 对象集合 -->
    <select id="getSysLinksList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_links
    </select>

</mapper>
