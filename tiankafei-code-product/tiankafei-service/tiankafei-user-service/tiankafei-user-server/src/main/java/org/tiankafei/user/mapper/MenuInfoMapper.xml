<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.user.mapper.MenuInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="org.tiankafei.user.vo.MenuInfoVo">
        <id column="id" property="id"/>
        <result column="menu_code" property="menuCode"/>
        <result column="menu_name" property="menuName"/>
        <result column="icon" property="icon"/>
        <result column="menu_type" property="menuType"/>
        <result column="open_type" property="openType"/>
        <result column="path" property="path"/>
        <result column="is_outside_url" property="isOutsideUrl"/>
        <result column="status" property="status"/>
        <result column="keys" property="keys"/>
        <result column="parent_id" property="parentId"/>
        <result column="serial_number" property="serialNumber"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="update_user_id" property="updateUserId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, menu_code, menu_name, icon, menu_type, open_type, path, is_outside_url, status, keys, parent_id, serial_number, description, create_time, update_time, create_user_id, update_user_id
    </sql>

    <!-- 根据主键获取 系统功能菜单信息表 对象 -->
    <select id="getSysMenuInfoById" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_menu_info where id = #{id}
    </select>

    <!-- 分页查询 系统功能菜单信息表 对象集合 -->
    <select id="getSysMenuInfoPageList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_menu_info
    </select>

    <!-- 查询 系统功能菜单信息表 对象集合 -->
    <select id="getSysMenuInfoList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_menu_info
    </select>

</mapper>
