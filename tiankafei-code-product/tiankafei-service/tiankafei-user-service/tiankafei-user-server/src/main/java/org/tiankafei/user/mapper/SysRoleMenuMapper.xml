<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.user.mapper.SysRoleMenuMapper">
    
    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="org.tiankafei.user.vo.SysRoleMenuQueryVo">
		<id column="id" property="id"/>
		<result column="role_id" property="roleId"/>
		<result column="menu_id" property="menuId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, role_id, menu_id
    </sql>

    <!-- 根据主键获取 系统角色对应的功能配置表 对象 -->
    <select id="getSysRoleMenuById" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_role_menu where id = #{id}
    </select>

    <!-- 分页查询 系统角色对应的功能配置表 对象集合 -->
    <select id="getSysRoleMenuPageList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_role_menu
    </select>

    <!-- 查询 系统角色对应的功能配置表 对象集合 -->
    <select id="getSysRoleMenuList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_role_menu
    </select>

</mapper>
