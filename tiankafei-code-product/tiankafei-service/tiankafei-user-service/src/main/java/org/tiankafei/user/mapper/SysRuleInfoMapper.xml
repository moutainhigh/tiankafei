<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.user.mapper.SysRuleInfoMapper">

            <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, rule_code, rule_name, description, status, create_time, update_time, create_user_id
    </sql>

    <select id="getSysRuleInfoList" resultType="org.tiankafei.user.vo.SysRuleInfoQueryVo">
        select
        <include refid="Base_Column_List"/>
        from sys_rule_info
    </select>

</mapper>
