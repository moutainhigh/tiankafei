<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.user.mapper.SysFeatureInfoMapper">

            <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, feature_code, feature_name, description, is_middle_node, url, parent_id, status, create_time, update_time, create_user_id, serial_number
    </sql>

    <select id="getSysFeatureInfoList" resultType="org.tiankafei.user.vo.SysFeatureInfoQueryVo">
        select
        <include refid="Base_Column_List"/>
        from sys_feature_info
    </select>

</mapper>
