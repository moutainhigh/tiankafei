<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tiankafei.user.mapper.SysDictTableMapper">
    
    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="org.tiankafei.user.vo.SysDictTableQueryVo">
		<id column="id" property="id"/>
		<result column="code" property="code"/>
		<result column="name" property="name"/>
		<result column="description" property="description"/>
		<result column="remarks" property="remarks"/>
		<result column="parent_id" property="parentId"/>
		<result column="all_parent_id" property="allParentId"/>
		<result column="serial_number" property="serialNumber"/>
		<result column="level" property="level"/>
		<result column="unit1" property="unit1"/>
		<result column="unit2" property="unit2"/>
		<result column="unit3" property="unit3"/>
		<result column="unit4" property="unit4"/>
		<result column="unit5" property="unit5"/>
		<result column="unit6" property="unit6"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="update_user_id" property="updateUserId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, code, name, description, remarks, parent_id, all_parent_id, serial_number, level, unit1, unit2, unit3, unit4, unit5, unit6, create_time, update_time, create_user_id, update_user_id
    </sql>

    <!-- 根据主键获取 系统数据字典的数据表 对象 -->
    <select id="getSysDictTableById" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_dict_table where id = #{id}
    </select>

    <!-- 分页查询 系统数据字典的数据表 对象集合 -->
    <select id="getSysDictTablePageList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_dict_table
    </select>

    <!-- 查询 系统数据字典的数据表 对象集合 -->
    <select id="getSysDictTableList" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"/>
        from sys_dict_table
    </select>

</mapper>
